<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane focusTraversable="true" prefHeight="177.0" prefWidth="680.0" style="-fx-background-color: #111315;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AddDiscountPopupController">
   <children>
      <VBox prefHeight="200.0" prefWidth="680.0" spacing="10.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" prefHeight="42.0" prefWidth="660.0">
               <children>
                  <Label text="Enter Discount amount :" textFill="WHITE">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="680.0">
               <children>
                  <TextField fx:id="popDisAmount" prefHeight="40.0" prefWidth="644.0" promptText="Eneter discount" styleClass="lightInput">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="72.0" prefWidth="660.0" style="-fx-spacing: 20;">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#popAddDisClick" prefHeight="35.0" prefWidth="100.0" styleClass="pinkBtn" text="Add Discount" />
                  <Button mnemonicParsing="false" onMouseClicked="#popCancelClick" prefHeight="35.0" prefWidth="100.0" styleClass="pinkBtn" text="Cancel" />
               </children>
               <VBox.margin>
                  <Insets right="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
