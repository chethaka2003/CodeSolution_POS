<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1600.0" styleClass="anchorBg" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
   <children>
      <VBox layoutX="-2.0" layoutY="-2.0" prefHeight="900.0" prefWidth="1600.0" styleClass="anchorPad">
         <children>
            <HBox alignment="CENTER" prefHeight="51.0" prefWidth="950.0">
               <children>
                  <Label styleClass="title" text="Welcome " />
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="74.0" prefWidth="1550.0" />
            <HBox alignment="CENTER" prefHeight="536.0" prefWidth="848.0">
               <children>
                  <StackPane prefHeight="471.0" prefWidth="513.0" styleClass="itemBox">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <children>
                        <VBox fx:id="loginVbox" accessibleText="Please enter user name" prefHeight="516.0" prefWidth="513.0" styleClass="anchorPad">
                           <children>
                              <HBox prefHeight="26.0" prefWidth="463.0" />
                              <HBox alignment="CENTER" prefHeight="51.0" prefWidth="463.0">
                                 <children>
                                    <Label styleClass="loginTitle" text="Login!" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="19.0" prefWidth="455.0">
                                 <children>
                                    <Label prefHeight="19.0" prefWidth="277.0" styleClass="loginSubTitle" text="PLease enter your credentials below to continue" />
                                 </children>
                              </HBox>
                              <HBox prefHeight="22.0" prefWidth="463.0" />
                              <HBox alignment="CENTER" prefHeight="82.0" prefWidth="463.0">
                                 <children>
                                    <VBox prefHeight="82.0" prefWidth="368.0">
                                       <children>
                                          <Label styleClass="itemName" text="Username" />
                                          <TextField fx:id="mainUserName" prefHeight="35.0" prefWidth="368.0" promptText="Please enter user name" styleClass="lightInput" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="82.0" prefWidth="463.0">
                                 <children>
                                    <VBox prefHeight="82.0" prefWidth="368.0">
                                       <children>
                                          <Label styleClass="itemName" text="Password" />
                                          <PasswordField fx:id="mainPassword" prefHeight="35.0" prefWidth="376.0" promptText="Please enter password" styleClass="lightInput" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              <HBox prefHeight="56.0" prefWidth="463.0">
                                 <children>
                                    <CheckBox alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" styleClass="checkBox" text="Remember me">
                                       <padding>
                                          <Insets left="50.0" />
                                       </padding>
                                    </CheckBox>
                                    <Label accessibleRole="BUTTON" onMouseClicked="#onClickForgetPwd" styleClass="Subtitle" text="Forgot password?">
                                       <HBox.margin>
                                          <Insets left="160.0" />
                                       </HBox.margin>
                                    </Label>
                                 </children>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="69.0" prefWidth="463.0">
                                 <children>
                                    <Button fx:id="loginBtn" mnemonicParsing="false" onMouseClicked="#onClickLogin" prefHeight="40.0" prefWidth="111.0" styleClass="pinkBtn" text="Login">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <HBox prefHeight="160.0" prefWidth="1550.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
