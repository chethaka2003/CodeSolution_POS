<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #111315;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.TransactionController">

    <VBox spacing="20" style="-fx-padding: 25;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Header -->
        <HBox alignment="CENTER">
            <Label style="-fx-font-size: 26px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Transaction" />
        </HBox>

        <!-- Main Layout Split -->
        <HBox spacing="20" VBox.vgrow="ALWAYS">

            <!-- LEFT SIDE: Item Table -->
            <VBox prefHeight="526.0" prefWidth="628.0" spacing="15" style="-fx-background-color: #111315; -fx-background-radius: 12;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <HBox prefHeight="23.0" prefWidth="628.0" style="-fx-background-color: #292C2D; -fx-background-radius: 12;">
               <children>
                  <Label prefHeight="42.0" prefWidth="91.0" style="-fx-text-fill: #EAEAEA; -fx-font-weight: Bold;" text="Item Code">
                     <padding>
                        <Insets left="12.0" />
                     </padding>
                  </Label>
                  <Label prefHeight="42.0" prefWidth="374.0" style="-fx-text-fill: #EAEAEA; -fx-font-weight: Bold;" text="Item Name">
                     <padding>
                        <Insets left="12.0" />
                     </padding>
                  </Label>
                  <Label prefHeight="17.0" prefWidth="114.0" style="-fx-text-fill: #EAEAEA; -fx-font-weight: Bold;" text="Item Price">
                     <padding>
                        <Insets left="12.0" />
                     </padding>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
                  <Label prefHeight="17.0" prefWidth="42.0" style="-fx-text-fill: #EAEAEA; -fx-font-weight: Bold;" text="Qty">
                     <padding>
                        <Insets left="12.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox prefHeight="549.0" prefWidth="628.0" style="-fx-background-radius: 12;">
               <children>
                  <ScrollPane fx:id="itemScrollHolder" prefHeight="462.0" prefWidth="628.0" style="-fx-background-color: #292C2D; -fx-background-radius: 12;" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txtNetAmount1" editable="false" maxWidth="Infinity" prefHeight="27.0" prefWidth="341.0" promptText="Item Code" style="-fx-background-color: #1C1C1C; -fx-text-fill: #FFFFFF; -fx-background-radius: 12; -fx-border-color: #404040; -fx-border-radius: 12;" />
                  <Button fx:id="btnAddItem" maxWidth="Infinity" onAction="#onDone" prefHeight="25.0" prefWidth="216.0" style="-fx-background-color: #FAC1D9; -fx-text-fill: #111315; -fx-background-radius: 12;" text="Add">
                     <HBox.margin>
                        <Insets left="70.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets left="2.0" />
               </opaqueInsets>
            </HBox>
            </VBox>

            <!-- RIGHT SIDE: Form & Buttons -->
            <VBox maxWidth="360" minWidth="280" prefWidth="320" spacing="20" style="-fx-background-color: #292C2D; -fx-padding: 25; -fx-background-radius: 12;" VBox.vgrow="ALWAYS">

                <!-- Customer ID -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #EAEAEA; -fx-font-size: 18px; -fx-font-weight: bold;" text="Customer ID" />
                    <TextField fx:id="txtCustomerId" maxWidth="Infinity" promptText="Enter Customer ID" style="-fx-background-color: #111315; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #7A7A7A; -fx-background-radius: 12; -fx-border-color: #404040; -fx-border-radius: 12;" HBox.hgrow="ALWAYS" />
                </VBox>

                <!-- Total -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #EAEAEA; -fx-font-size: 18px; -fx-font-weight: bold;" text="Total" />
                    <TextField fx:id="txtTotal" editable="false" maxWidth="Infinity" promptText="Total amount" style="-fx-background-color: #1C1C1C; -fx-text-fill: #FFFFFF; -fx-background-radius: 12; -fx-border-color: #404040; -fx-border-radius: 12;" HBox.hgrow="ALWAYS" />
                </VBox>

                <!-- Discount -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #EAEAEA; -fx-font-size: 18px; -fx-font-weight: bold;" text="Discount" />
                    <TextField fx:id="txtDiscount" maxWidth="Infinity" promptText="Enter discount" style="-fx-background-color: #111315; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #7A7A7A; -fx-background-radius: 12; -fx-border-color: #404040; -fx-border-radius: 12;" HBox.hgrow="ALWAYS" />
                </VBox>

                <!-- Net Amount -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #EAEAEA; -fx-font-size: 18px; -fx-font-weight: bold;" text="Net Amount" />
                    <TextField fx:id="txtNetAmount" editable="false" maxWidth="Infinity" promptText="After discount" style="-fx-background-color: #1C1C1C; -fx-text-fill: #FFFFFF; -fx-background-radius: 12; -fx-border-color: #404040; -fx-border-radius: 12;" HBox.hgrow="ALWAYS" />
                </VBox>

                <!-- Payment Method -->
                <VBox spacing="5">
                    <Label style="-fx-text-fill: #EAEAEA; -fx-font-size: 18px; -fx-font-weight: bold;" text="Payment Method" />
                    <ComboBox fx:id="cmbPaymentMethod" maxWidth="Infinity" promptText="Select payment method" style="-fx-background-color: #111315; -fx-text-fill: #FFFFFF; -fx-background-radius: 12; -fx-border-color: #404040; -fx-border-radius: 12;" HBox.hgrow="ALWAYS" />
                </VBox>

                <!-- Buttons -->
                <VBox spacing="10">
                    <Button fx:id="btnPrint" maxWidth="Infinity" onAction="#onPrintInvoice" style="-fx-background-color: #1C1C1C; -fx-text-fill: #FAC1D9; -fx-border-color: #FAC1D9; -fx-border-width: 2; -fx-background-radius: 12; -fx-border-radius: 12;" text="Print Invoice" HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnDone" maxWidth="Infinity" onAction="#onDone" style="-fx-background-color: #FAC1D9; -fx-text-fill: #111315; -fx-background-radius: 12;" text="Pay" HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnNext" maxWidth="Infinity" onAction="#onNextCustomer" style="-fx-background-color: #FAC1D9; -fx-text-fill: #111315; -fx-background-radius: 12;" text="Next Customer" HBox.hgrow="ALWAYS" />
                </VBox>

            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
